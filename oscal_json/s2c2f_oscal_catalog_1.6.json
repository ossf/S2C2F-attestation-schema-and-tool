			"group": [
				{
					"title": "Ingest It",
					"prop": {
						"_name": "label",
						"_value": "1.1"
					},
					"part": {
						"p": "I can ship any existing asset if external OSS sources are compromised or unavailable.",
						"_id": "s1.1_smt",
						"_name": "objective"
					},
					"control": [
						{
							"title": "Use public package managers trusted by your organization (i.e. NuGet.org, npmjs.com, PyPi.org, etc.)",
							"prop": [
								{
									"_name": "label",
									"_value": "ING-1"
								},
								{
									"_name": "sort-id",
									"_value": "ing-1"
								},
								{
									"_ns": "https://github.com/ossf/s2c2f/blob/main/specification/framework.md",
									"_name": "maturity-level",
									"_value": "1"
								}
							],
							"part": {
								"p": "Your organization benefits from the inherent security provided by the chosen trusted public package manager. Consuming open source from other sources should be deeped risky.",
								"_name": "statement",
								"_id": "ing-1_stmt"
							},
							"_id": "ing-1"
						},
						{
							"title": "Use an OSS binary repository manager solution (i.e. JFrog Artifactory, Azure Artifacts, etc.)",
							"prop": [
								{
									"_name": "label",
									"_value": "ING-2"
								},
								{
									"_name": "sort-id",
									"_value": "ing-2"
								},
								{
									"_ns": "https://github.com/ossf/s2c2f/blob/main/specification/framework.md",
									"_name": "maturity-level",
									"_value": "1"
								}
							],
							"part": {
								"p": "Caches a local copy of the OSS artifact and protects against left-pad incidents, enabling developers to continue to build even if upstream resources are unavailable.",
								"_name": "statement",
								"_id": "ing-2_stmt"
							},
							"_id": "ing-2"
						},
						{
							"title": "Have a Deny List capability to block known malicious OSS from being consumed",
							"prop": [
								{
									"_name": "label",
									"_value": "ING-3"
								},
								{
									"_name": "sort-id",
									"_value": "ing-3"
								},
								{
									"_ns": "https://github.com/ossf/s2c2f/blob/main/specification/framework.md",
									"_name": "maturity-level",
									"_value": "3"
								}
							],
							"part": {
								"p": "Prevents ingestion of known malware by blocking ingestion as soon as a critically vulnerable OSS component is identified, such as colors v 1.4.1, or if an OSS component is deemed malicious.",
								"_name": "statement",
								"_id": "ing-3_stmt"
							},
							"_id": "ing-3"
						},
						{
							"title": "Mirror a copy of all OSS source code to an internal location",
							"prop": [
								{
									"_name": "label",
									"_value": "ING-4"
								},
								{
									"_name": "sort-id",
									"_value": "ing-4"
								},
								{
									"_ns": "https://github.com/ossf/s2c2f/blob/main/specification/framework.md",
									"_name": "maturity-level",
									"_value": "3"
								}
							],
							"part": {
								"p": "Business Continuity and Disaster Recovery (BCDR) scenarios. Also enables proactive security scanning, fix it scenarios, and ability to rebuild OSS in a trusted build environment.",
								"_name": "statement",
								"_id": "ing-4_stmt"
							},
							"_id": "ing-4"
						}
					],
					"_id": "s1.1"
				},
