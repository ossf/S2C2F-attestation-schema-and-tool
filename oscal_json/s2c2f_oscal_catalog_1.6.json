									"_value": "sca-5"
								},
								{
									"_ns": "https://github.com/ossf/s2c2f/blob/main/specification/framework.md",
									"_name": "maturity-level",
									"_value": "3"
								}
							],
							"part": {
								"p": "Identify zero-day vulnerabilities and confidentially contribute fixes back to the upstream maintainer.",
								"_name": "statement",
								"_id": "sca-5_stmt"
							},
							"_id": "sca-5"
						}
